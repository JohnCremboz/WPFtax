<UserControl x:Class="TAX_WPF.VakXIX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TAX_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="Vak XIX - WINST EN BATEN VAN EEN BEROEPSWERKZAAMHEID" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="Fiscale toelichting" FontWeight="Bold"/>
            <TextBlock Text="1. Winst en baten die overeenstemmen met de voorheen afgetrokken werkelijke kosten van overdracht van activa waarop u in het belastbare tijdperk een (al dan niet belastbare) meerwaarde hebt verwezenlijkt:" FontWeight="Bold"/>
            <TextBox Width="200" Margin="20,5" ToolTip="Winst baten voorheen afgetrokken werkelijke kosten overdracht bedrag"/>
            <TextBlock Text="1679" Margin="10,0,0,0"/>
            <TextBlock Text="Fiscale toelichting" FontWeight="Bold"/>
            <TextBlock Text="2. Vergoedingen:" FontWeight="Bold"/>
            <TextBlock Text="3. Bedrijfsvoorheffing:" FontWeight="Bold"/>
            <TextBox Width="200" Margin="20,5" ToolTip="Bedrijfsvoorheffing bedrag"/>
            <TextBlock Text="1758" Margin="10,0,0,0"/>
            <TextBlock Text="Fiscale toelichting" FontWeight="Bold"/>
            <TextBlock Text="4. Belastingskrediet voor de aangroei van eigen middelen:" FontWeight="Bold"/>
            <TextBox Width="200" Margin="20,5" ToolTip="Belastingskrediet aangroei eigen middelen bedrag"/>
            <TextBlock Text="1759" Margin="10,0,0,0"/>
            <TextBlock Text="Fiscale toelichting" FontWeight="Bold"/>
            <TextBlock Text="5. Belastingskrediet voor de verhoging van de fietskilometervergoeding toegekend in toepassing van cao nr. 164:" FontWeight="Bold"/>
            <TextBox Width="200" Margin="20,5" ToolTip="Belastingskrediet verhoging fietskilometervergoeding bedrag"/>
            <TextBlock Text="1760" Margin="10,0,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>