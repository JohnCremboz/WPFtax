                        <TextBlock Text="1423" Margin="10,0,0,0"/>
                        <TextBlock Text="2) overuren:" FontWeight="Bold"/>
                        <TextBox Width="200" Margin="20,5" ToolTip="Overuren 2022 bedrag"/>
