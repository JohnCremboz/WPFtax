<UserControl x:Class="TAX_WPF.VakXI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TAX_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Vak XI - BEDRAGEN DIE IN AANMERKING KOMEN VOOR DE GEWESTELIJKE BELASTINGKREDIETEN VOOR WINWINLENINGEN EN VRIENDENAANDELEN" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock Text="I. GEWESTELIJK" FontWeight="Bold"/>
                        <TextBlock Text="Fiscale toelichting" FontWeight="Bold"/>
                        <TextBlock Text="1. Bedragen die in aanmerking komen voor het jaarlijks belastingkrediet" FontWeight="Bold"/>
                        <TextBlock Text="a) voor Winwinleningen" FontWeight="Bold"/>
                        <TextBlock Text="Uitstaand saldo van de uitgeleende of ter beschikking gestelde bedragen:" FontWeight="Bold"/>
                        
                            <TextBlock Text="1) op 1.1.2023:" FontWeight="Bold"/>
                            <TextBox Width="200" Margin="0,5" ToolTip="Uitstaand saldo Winwinleningen op 1.1.2023"/>
                            <TextBlock Text="3377" Margin="10,0,0,0"/>
                            <TextBlock Text="2) op 31.12.2023:" FontWeight="Bold"/>
                            <TextBox Width="200" Margin="0,5" ToolTip="Uitstaand saldo Winwinleningen op 31.12.2023"/>
                            <TextBlock Text="3378" Margin="10,0,0,0"/>
                        
                        <TextBlock Text="b) voor Vriendenaandelen" FontWeight="Bold"/>
                        <TextBlock Text="Volgestort bedrag, beperkt volgens het aantal dagen in 2023 dat u de aandelen in uw bezit had en recht had op het belastingkrediet:" FontWeight="Bold"/>
                        <TextBox Width="200" Margin="20,5" ToolTip="Volgestort bedrag Vriendenaandelen 2023"/>
                        <TextBlock Text="3376" Margin="10,0,0,0"/>
                        <TextBlock Text="Fiscale toelichting"/>
                        <TextBlock Text="2. Bedrag dat in aanmerking komt voor het eenmalig belastingkrediet" FontWeight="Bold"/>
                        <TextBlock Text="In 2023 definitief verloren gegaan bedrag van de hoofdsom:" FontWeight="Bold"/>
                        
                            <TextBlock Text="a) van Winwinleningen gesloten van 16.3.2020 tot 31.12.2021:" FontWeight="Bold"/>
                            <TextBox Width="200" Margin="0,5" ToolTip="Winwinleningen verloren hoofdsom 16.3.2020 - 31.12.2021"/>
                            <TextBlock Text="3368" Margin="10,0,0,0"/>
                            <TextBlock Text="b) van Winwinleningen gesloten vóór 16.3.2020 en na 31.12.2021:" FontWeight="Bold"/>
                            <TextBox Width="200" Margin="0,5" ToolTip="Winwinleningen verloren hoofdsom vóór 16.3.2020 en na 31.12.2021"/>
                            <TextBlock Text="3379" Margin="10,0,0,0"/>
             
    </StackPanel>
</UserControl>