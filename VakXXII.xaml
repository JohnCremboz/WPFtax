<UserControl x:Class="TAX_WPF.VakXXII"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TAX_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBlock Text="Vak XXII - EERSTE VESTIGING ALS ZELFSTANDIGE" FontWeight="Bold" Margin="0,10,0,10" TextWrapping="Wrap"/>
            
            <TextBlock Text="Fiscale toelichting" FontWeight="Bold" Margin="0,5,0,5"/>   
            <TextBlock Text="Als u zich in 2021, 2022 of 2023 voor de eerste maal gevestigd hebt als zelfstandige in hoofdberoep, vermeld hiernaast de aanvangsdatum (dag, maand, jaar):" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,2"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Width="200" Margin="20,5,0,5" ToolTip="Aanvangsdatum eerste vestiging zelfstandige"/>
                <TextBlock Grid.Column="1" Text="1615" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Fiscale toelichting" FontWeight="Bold" Margin="0,10,0,5"/>
            <!-- If you plan to add more fields related to "EERSTE VESTIGING ALS ZELFSTANDIGE", 
                 they would go here, potentially after another descriptive TextBlock or directly as new Grid rows.
                 The last "Fiscale toelichting" acts as a separator or placeholder. 
                 If no more content is planned for this Vak, this last TextBlock might be optional,
                 but it's consistent with the structure of other Vak files where a "Fiscale toelichting"
                 can appear at the end of a section or the control. -->
        </StackPanel>
    </ScrollViewer>
</UserControl>